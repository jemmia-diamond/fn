model order_promotion_analysis {
  uuid                   String    @id @db.Uuid
  order_code             String?   @db.VarChar
  variant_id             BigInt?
  price                  BigInt?
  promotion_name         String?   @db.VarChar
  priority_order         String?   @db.VarChar
  price_before_promotion BigInt?
  price_after_promotion  BigInt?
  calculated_sale_price  BigInt?
  actual_sale_price      BigInt?
  created_at             DateTime? @default(now()) @db.Timestamp(6)
  updated_at             DateTime? @default(now()) @db.Timestamp(6)

  @@schema("promotion")
}

model order_promotions {
  uuid                String    @id @db.VarChar(36)
  id                  String?   @unique(map: "ix_promotion_order_promotions_id") @db.VarChar(50)
  haravan_id          String?   @db.VarChar(50)
  order_code          String?   @db.VarChar(50)
  real_created_at     DateTime? @db.Timestamp(6)
  order_created_on    DateTime? @db.Timestamp(6)
  sub_total_price     Decimal?  @db.Decimal(36, 8)
  total_price         Decimal?  @db.Decimal(36, 8)
  updated_at          DateTime? @db.Timestamp(6)
  promotion_order     Json?
  promotion_item      Json?
  database_created_at DateTime? @default(now()) @db.Timestamp(6)
  database_updated_at DateTime? @default(now()) @db.Timestamp(6)

  @@schema("promotion")
}
