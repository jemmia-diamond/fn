{
  "name": "fn-v3",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "wrangler dev",
    "build": "prisma migrate deploy && prisma generate",
    "deploy": "wrangler deploy --minify",
    "lint": "eslint",
    "lint:staged": "lint-staged",
    "prepare": "husky",
    "format": "eslint --fix",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:pull": "prisma db pull"
  },
  "dependencies": {
    "@hono/standard-validator": "^0.1.5",
    "@prisma/adapter-neon": "^6.18.0",
    "@prisma/client": "^6.17.1",
    "@prisma/extension-accelerate": "^2.0.2",
    "@sentry/node": "^10.21.0",
    "@sentry/profiling-node": "^10.21.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint-config-prettier": "^10.1.8",
    "hono": "^4.10.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.5",
    "prettier": "^3.6.2",
    "prisma": "^6.18.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "wrangler": "^4.4.0"
  },
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=24.10.0"
  },
  "prisma": {
    "schema": "./prisma/schema/"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
