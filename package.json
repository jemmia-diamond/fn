{
  "name": "fn-v3",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "wrangler dev",
    "build": "prisma migrate deploy && prisma generate",
    "deploy": "wrangler deploy --minify",
    "lint": "eslint",
    "lint:staged": "lint-staged",
    "prepare": "husky",
    "format": "eslint --fix",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:pull": "prisma db pull"
  },
  "dependencies": {
    "@asla/hono-decorator": "^0.0.1",
    "@prisma/client": "^6.17.1",
    "@scalar/hono-api-reference": "^0.9.22",
    "hono": "^4.10.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "prisma": "^6.17.1",
    "typescript": "~5.9.2",
    "wrangler": "^4.4.0"
  },
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=24.10.0"
  },
  "prisma": {
    "schema": "./prisma/schema/"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}