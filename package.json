{
  "name": "fn",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "prisma migrate deploy && prisma generate",
    "deploy": "wrangler deploy --minify --outdir dist --upload-source-maps --var SENTRY_RELEASE:$(sentry-cli releases propose-version)",
    "lint": "eslint",
    "lint:staged": "lint-staged",
    "format": "eslint --fix",
    "sentry:sourcemaps": "_SENTRY_RELEASE=$(sentry-cli releases propose-version) && sentry-cli releases new $_SENTRY_RELEASE --org=jemmia --project=jemmia-fn && sentry-cli sourcemaps upload --org=jemmia --project=jemmia-fn --release=$_SENTRY_RELEASE --strip-prefix 'dist/..' dist",
    "postdeploy": "pnpm sentry:sourcemaps"
  },
  "dependencies": {
    "@directus/sdk": "^20.0.2",
    "@haverstack/axios-fetch-adapter": "^0.12.0",
    "@hono/sentry": "^1.2.1",
    "@larksuiteoapi/node-sdk": "1.47.1",
    "@prisma/adapter-pg": "^6.15.0",
    "@prisma/client": "^6.15.0",
    "@sentry/cloudflare": "^10.19.0",
    "axios": "^1.13.2",
    "axios-retry": "^4.5.0",
    "cheerio": "^1.2.0",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.13",
    "form-data": "^4.0.4",
    "hono": "^4.10.4",
    "jimp": "^1.6.0",
    "nocodb-sdk": "^0.265.1",
    "pg": "^8.16.3",
    "uuid": "^11.1.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/compat": "^1.3.2",
    "@sentry/cli": "^2.57.0",
    "@stylistic/eslint-plugin": "^5.2.3",
    "@types/jimp": "^0.2.28",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.27.0",
    "eslint-plugin-unicorn": "^61.0.2",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prisma": "^6.15.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "wrangler": "^4.42.2"
  },
  "packageManager": "pnpm@10.21.0",
  "engines": {
    "node": ">=24.10.0"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prisma": {
    "schema": "./prisma"
  },
  "pnpm": {
    "overrides": {
      "minimatch": ">=10.2.1"
    }
  }
}
